<style>
    @import url('https://fonts.googleapis.com/css?family=Roboto+Mono:300,700');

    * {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}
img {
	max-width: 100%;
}
main {
	min-height: 100vh;
	min-width: 100vw;
	display: grid;
	grid-template-columns: 1fr;
	@media screen and (min-width: 1060px) {
	grid-template-columns: minmax(530px, 1fr) minmax(530px, 1.5fr);
	}
}
@media screen and (max-width: 768px) {
	.cart {
		padding: 1rem; /* הקטנת הריווח */
		max-width: 90vw; /* הגבלת רוחב */
		margin: 0 ; /* מרכזת את .cart במסכים קטנים */
		overflow-x: hidden; /* הסרת גלילה אופקית */
	}

	.cart-item,
	.shipping,
	.total {
		grid-template-columns: minmax(50px, 1fr) 1.5fr 1ch 4ch; /* הקטנת רוחב עמודות */
		grid-gap: 0.5rem; /* צמצום המרווח בין העמודות */
	}
    .checkout {
        width: 100vw;
        padding: 0 1rem; /* הוספת ריווח פנימי קטן מימין ושמאל */
        margin: 0; /* ביטול מרווח חיצוני */
        box-sizing: border-box;
    }
    .checkout header{
        display: flex;
        justify-content: center;
    }
    .checkout form {
        margin-left: -50px; /* להזיז את הטופס לשמאל */
        max-width: 100%; /* למלא את כל הרוחב */
    }
}

.cart {
	padding: 2rem;
	> .cart-item, > .shipping, > .total {
		display: grid;
		grid-template-columns: minmax(80px, 2fr) 4fr 2ch 7ch;
		grid-gap: 1rem;
		align-items: center;
		.image {
			filter: drop-shadow(1px 1px 1px rgba(0,0,0,0.5));
		}
		.title {
			font-weight: 700;
			> span {
				display: block;
				font-weight: 300;
			}
		}
		.price {
			text-align: right;
		}
	}
	.total .title, .shipping .title {
		grid-column: 2;
	}
	.total {
		border-top: 1px solid #dadada;
		border-bottom: 1px solid #dadada;
		.price {
			font-size: 1.25rem;
			font-weight: 700;
		}
	}
}
.checkout {
	background: #fff;
	padding: 2rem;
	padding-right: 3rem;
	>header {
		display: grid;

		>h1, p {
			margin-top: 0;
			grid-column: 2;
		}
		>h1 {margin-bottom: 0;}
		>p {margin-bottom: 2rem;}
	}
	>form {
		.input-group {
			margin-bottom: 1.5rem;
			display: grid;
			grid-template-columns: minmax(16ch, 1fr) 4fr;
			align-items: baseline;
			.label {
				padding-right: 1rem;
				text-align: right;
			}
			.input {
				align-items: baseline;
				>input {
					width: 100%;
					border: 0;
					font-size: inherit;
					font-family: inherit;
					color: inherit;
					border-bottom: 1px solid #dadada;
					padding: 0.5rem 0;
					&:focus {
						outline: none;
						border-color: #121212;
					}
				}
				&.number {
					display: flex;
					> span {
						padding: 0 0.5rem;
					}
					>input {
						text-align: center;
						min-width: 4ch;
					}
				}
			}
			>button {
				grid-column: 2;
				background: #121212;
				color: #FFF;
				padding: 1rem;
				border: 0;
				cursor: pointer;
				margin-top: 2rem;
				&:hover {
					transform: translatey(-1px);
				}
			}
		}
	}
}
</style>
<main>
	<section class="cart">
		<div class="cart-item">
			<img src="https://cdn.shopify.com/s/files/1/0814/1617/products/IMG_0716_1024x1024.png" class="image">
			<p class="title">Lorem ipsum dolor <span>2.5cm &times; 2.8cm</span></p>
			<p class="currency">CHF</p>
			<p class="price">4.25</p>
		</div>
		<div class="cart-item">
			<img src="https://cdn.shopify.com/s/files/1/0814/1617/products/IMG_2760_1024x1024.png" class="image">
			<p class="title">Sit amet <span>2.4cm &times; 2.8cm</span></p>
			<p class="currency">CHF</p>
			<p class="price">4.25</p>
		</div>
		<div class="cart-item">
			<img src="https://cdn.shopify.com/s/files/1/0814/1617/products/IMG_2766_1024x1024.png" class="image">
			<p class="title">Consectetur adipiscing elit <span>2.7cm &times; 2.3cm</span></p>
			<p class="currency">CHF</p>
			<p class="price">5.60</p>
		</div>
		<div class="shipping">
			<p class="title">Shipping</p>
			<p class="currency">CHF</p>
			<p class="price">2.70</p>
		</div>
		<div class="total">
			<p class="title">Total</p>
			<p class="currency">CHF</p>
			<p class="price">16.80</p>
		</div>
	</section>
	<section class="checkout">
		<header>
			<h1>Checkout</h1>
			<p>by Credit Card</p>
		</header>
		<form action="post">
			<div class="input-group">
				<div class="label">
					<label for="name">Full Name</label>
				</div>
				<div class="input">
					<input type="text" id="name" placeholder="Jane Doe" required>
				</div>
			</div>
			<div class="input-group">
				<div class="label">
					<label for="number">Card Number</label>
				</div>
				<div class="input number">
					<input type="number" min="1000" max="9999" id="number" placeholder="0000" required><span>&ndash;</span><input type="number" min="1000" max="9999" placeholder="0000" required><span>&ndash;</span><input type="number" min="1000" max="9999" placeholder="0000" required><span>&ndash;</span><input type="number" min="1000" max="9999" placeholder="0000" required>
				</div>
			</div>
			<div class="input-group">
				<div class="label">
					<label for="cvc">Security Code</label>
				</div>
				<div class="input">
					<input type="number" id="cvc" placeholder="000" min="001" max="999" step="1" required>
				</div>
			</div>
			<div class="input-group">
				<div class="label">
					<label for="expire-month">Expiry</label>
				</div>
				<div class="input">
					<input type="month" id="expire-month" required>
				</div>
				<button>Charge Credit Card</button>
			</div>
		</form>
	</section>
</main>