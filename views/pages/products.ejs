<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/styles.css" type="text/css">
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
</head>
<body>
    <div class="container">
        <h1 class="my-4">Product List</h1>

        <!-- טופס הסינון נשאר כמו שהוא -->
        <form action="/products/filter" method="GET" class="form-inline">
            <div class="form-group">
                <label for="minPrice" class="form-label">Minimum Price</label>
                <input type="number" class="form-control" id="minPrice" name="minPrice" placeholder="Min Price" value="<%= minPrice || 0 %>">
            </div>
            <div class="form-group">
                <label for="maxPrice" class="form-label">Maximum Price</label>
                <input type="number" class="form-control" id="maxPrice" name="maxPrice" placeholder="Max Price" value="<%= maxPrice || 10000 %>">
            </div>
            <button type="submit" class="btn btn-primary mb-2">Filter</button>
        </form>

        <!-- איזור המוצרים, שיתעדכן בעזרת JavaScript -->
        <div class="row" id="products-container"></div>
    </div>

    <!-- Include jQuery and jQuery UI -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        // שליחת בקשת AJAX לאחר טעינת העמוד
        $(document).ready(function() {
            $.get('/products/data', function(response) {
                if (response.success) {
                    const products = response.data;
                    const container = $('#products-container');
                    products.forEach(product => {
                        const productCard = `
                            <div class="col-md-4">
                                <div class="card mb-4">
                                    <img class="card-img-top" src="${product.image}" alt="${product.name}" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">${product.name}</h5>
                                        <p class="card-text"><strong>Price:</strong> ₪${product.price}</p>
                                        <p class="card-text"><strong>Screen Type:</strong> ${product.screenType}</p>
                                        <p class="card-text">${product.description}</p>
                                    </div>
                                </div>
                            </div>
                        `;
                        container.append(productCard);
                    });
                } else {
                    console.error('Failed to fetch products');
                }
            });
        });
    </script>
</body>
</html>
